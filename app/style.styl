@import 'nib'

global-reset()

body
  font-family Helevetica Neue, 'Roboto', sans-serif
  color #ffffff
  line-height 25px
  min-width 100%
  min-height 100%
  padding-bottom: 30px

html
  height 100%

.container
  width 850px
  margin 0 auto
  position relative

canvas
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1

nav.navbar
  margin-top: 20px
  background-color: rgba(0,0,0,0.2)
  border-radius: 4px
  .navbar-brand
    color: #fff
  .navbar-nav
    >li>a
      color: #fff
      &:hover
        background-color: rgba(0,0,0,0.2)

.content
  margin-top: 20px
  background-color: rgba(0,0,0,0.1)
  border: 3px solid #000
  box-shadow: inset 0px 0px 10px #000
  border-radius: 4px
  overflow: hidden

  &-header
    border-bottom: 3px solid #000
    height: 90px
    box-shadow: 0px 3px 5px rgba(0,0,0,0.5)

  &-body
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    flex-wrap: wrap
    padding: 20px 10px
    .item-wrapper
      flex: 0 0 250px
      margin: 10px 0

      .item
        opacity: 1
        .desc
          opacity: 1
          .name
            opacity: 1
          span
            opacity: 1


        .img-wrapper
          opacity: 1
          .item-link
            opacity: 1
            img.itemsimg
              opacity: 1
        img.stand
          opacity: 1
        .cost
          opacity: 1
          img
            opacity: 1
        .buyb
          opacity: 1
          img
            opacity: 1

























